// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator erd {
  provider = "prisma-erd-generator"
  output = "ERD.png"
  theme = "neutral"
  disabled = false
}

model Teacher { // Professor
  id              String       @id @default(uuid())
  name            String
  subjects     Subject[]
  lessons           Lesson[]
}

model Subject { // Disciplina
  id            String       @id @default(uuid())
  name          String
  numLessonsPerGrade        NumLessonsPerGrade[]
  teachers   Teacher[]
  lessons         Lesson[]
}

model NumLessonsPerGrade { // Numero de aular por serie
  id            String       @id @default(uuid())

  subjectId       String
  subject         Subject @relation(fields: [subjectId], references: [id])

  gradeId       String
  grade         Grade @relation(fields: [gradeId], references: [id])

  numWeeklyLessons  Int
}

model Grade { // Serie
  id            String       @id @default(uuid())
  name          String
  classes           Class[]
  subjectsPerGrade  NumLessonsPerGrade[]
}

model Class { // Turma
  id            String       @id @default(uuid())
  name          String

  gradeId       String
  grade         Grade @relation(fields: [gradeId], references: [id])

  lessons                     Lesson[]
  availableTimeSlots          Int[] // horarios disponiveis
}

model Lesson { // Aulas
  id                    String        @id @default(uuid())
  startTime       Int
  
  classId       String
  class         Class         @relation(fields: [classId], references: [id])

  teacherId   String
  teacher     Teacher @relation(fields: [teacherId], references: [id])

  subjectId  String
  subject    Subject @relation(fields: [subjectId], references: [id])
}